<Window x:Class="_1135_15092025_NVE.View.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1135_15092025_NVE.View"
        xmlns:vm="clr-namespace:_1135_15092025_NVE.VM"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800"
        DataContext="{DynamicResource vm}">
    <Window.Resources>
        <vm:RegistrationVM x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Регистарция нового пользователя" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Margin="0,0,10,5" FontSize="18"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Athlete.Name}" Height="25" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,10,5" FontSize="18"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Athlete.LastName}" Height="25" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата рождения:" VerticalAlignment="Center" Margin="0,0,10,5" FontSize="18"/>
        <DatePicker Grid.Row="3" Grid.Column="1" Text="{Binding Athlete.Birthday}" Height="25" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Категория:" VerticalAlignment="Center" Margin="0,0,10,5" FontSize="18"/>
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Types}" SelectedItem="{Binding Athlete.Category}" DisplayMemberPath="Title" Height="25" Margin="0,0,0,5">
            <ComboBoxItem Content="Юниор"/>
            <ComboBoxItem Content="Взрослый"/>
            <ComboBoxItem Content="Мастер"/>
        </ComboBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Уровень подготовки:" VerticalAlignment="Center" Margin="0,0,10,5" FontSize="18"/>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Levels}" SelectedItem="{Binding Athlete.Level}" DisplayMemberPath="Title" Height="25" Margin="0,0,0,5">
            <ComboBoxItem Content="Новичок"/>
            <ComboBoxItem Content="Средний"/>
            <ComboBoxItem Content="Продвинутый"/>
        </ComboBox>

        <Button Grid.ColumnSpan="2" Grid.Row="6" Content="Зарегистрировать" Width="120" Margin="0,190,10,0" FontSize="18" Command="{Binding Registr}"/>
    </Grid>
</Window>
